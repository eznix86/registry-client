{
  "version": "2",
  "run": {
    "timeout": "5m",
    "tests": true,
    "concurrency": 4,
    "allow-parallel-runners": true
  },
  "linters": {
    "default": "standard",
    "enable": [
      "revive",
      "misspell",
      "asciicheck",
      "bidichk",
      "usestdlibvars",
      "gocyclo",
      "funlen",
      "nestif",
      "dupl",
      "gosec",
      "staticcheck",
      "gocritic",
      "unused",
      "bodyclose",
      "errcheck",
      "unparam",
      "prealloc",
      "nilerr",
      "errorlint"
    ],
    "disable": [
      "wsl"
    ],
    "settings": {
      "gocyclo": {
        "min-complexity": 15
      },
      "misspell": {
        "locale": "US"
      },
      "revive": {
        "severity": "warning"
      }
    }
  },
  "formatters": {
    "enable": [
      "gci",
      "gofmt",
      "gofumpt"
    ]
  },
  "issues": {
    "max-issues-per-linter": 0,
    "max-same-issues": 3,
    "uniq-by-line": false
  },
  "output": {
    "formats": {
      "text": {
        "print-issued-lines": true,
        "colors": true
      }
    }
  }
}
